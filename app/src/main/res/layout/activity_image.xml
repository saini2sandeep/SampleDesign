<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".imageSelect.ImageActivity">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/layout_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/camera_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_border_primary_color"
        android:paddingBottom="@dimen/horizontal_padding_8"
        android:paddingEnd="@dimen/vertical_padding_16"
        android:paddingStart="@dimen/vertical_padding_16"
        android:paddingTop="@dimen/horizontal_padding_8"
        android:text="@string/camera"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/tv_16"
        app:layout_constraintEnd_toStartOf="@+id/gallery_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout" />


    <TextView
        android:id="@+id/gallery_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_border_primary_color"
        android:paddingBottom="@dimen/horizontal_padding_8"
        android:paddingEnd="@dimen/vertical_padding_16"
        android:paddingStart="@dimen/vertical_padding_16"
        android:paddingTop="@dimen/horizontal_padding_8"
        android:text="@string/gallery"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/tv_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/camera_tv"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout" />
</android.support.constraint.ConstraintLayout>