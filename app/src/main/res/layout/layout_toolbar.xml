<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/toolbar_back_button_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/vertical_margin_16"
        android:padding="4dp"
        android:contentDescription="@string/back_button"
        android:src="@drawable/ic_arrow_back_white" />

    <TextView
        android:id="@+id/toolbar_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="@dimen/vertical_margin_10"
        android:layout_toEndOf="@+id/toolbar_back_button_iv"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/textColorWhite"
        android:textSize="@dimen/tv_18" />
</RelativeLayout>